@model Evento

@{
    var casaDeShowRepository = ViewBag.casaDeShowRepository;

    var casas = casaDeShowRepository.GetCasas();
    var eventos = ViewBag.eventos;
}
<h3>Criar Evento</h3>

<div>
    <div>
        @{
            // required oninvalid="this.setCustomValidity('Informe o campo')"
            // oninput ="try{setCustomValidity('')catch(e){}"
        }
        <form class="panel-body" asp-route-Id="@Model.Id" asp-action="AddEvento" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-lavel">Nome<input asp-for="@Model.Nome" type="text" class="form-control" id="nomeEvento" placeHolder="Linkin Park" required></label>
                <label class="control-lavel">Data<input asp-for="@Model.Data" type="date" class="form-control" id="dataEvento" required></label>
                <label class="control-lavel">Preço da Entrada (R$)<input id="preco" asp-for="@Model.Preco" oninput="trocaVirgulaPorPonto()" class="form-control" id="precoEvento" placeHolder="200.00" required></label>
                <label class="control-lavel">Genero<select asp-for="@Model.Genero" class="form-control sigle-select" id="generoEvento" required>
                    <option selected value="">[Selecione o gênero]</option>
                    <option value="Rock">Rock</option>
                    <option value="Sertanejo">Sertanejo</option>
                    <option value="Indie">Índie</option>
                </select></label>
                <label class="control-lavel">Casa<select asp-for="@Model.CasaDeShowId" class="form-control sigle-select" id="casaEvento" required>
                    <option selected value="">[Selecione a casa]</option>
                    @foreach (var casa in casas)
                    {
                        <option value="@casa.Id">@casa.Nome</option>
                    }
                </select></label>
            </div>
            <div>
                <label>Imagem</label>
                <input type="file" name="arquivo"/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    Criar
                </button>
            </div>
        </form>
    </div>

    <div>
        <table class="tabela">
            @foreach (var evento in eventos)
            {
                <tr>
                    <td>
                        <a asp-action="Evento" asp-route-id="@evento.Id">@evento.Nome</a>
                    </td>
                    <td>
                        @evento.Data
                    </td>
                    <td>
                        @evento.Preco
                    </td>
                    <td>
                        @evento.Genero
                    </td>
                    <td>
                        @{
                            var casa = casaDeShowRepository.GetCasaPeloId(evento.CasaDeShowId);
                        }
                        <a asp-action="Casa" asp-controller="CasaDeShow" asp-route-id="@casa.Id">@casa.Nome</a>
                    </td>
                    <td>
                        <a asp-action="EditEvento" asp-route-id="@evento.Id"><button class="btn btn-primary">Editar</button></a>
                    </td>
                    <td>
                        <a asp-action="DeleteEvento" asp-route-id="@evento.Id"><button class="btn btn-danger">Excluir</button></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>