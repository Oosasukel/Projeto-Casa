@using Microsoft.AspNetCore.Identity

@inject SignInManager<ProjetoCasaDeShowUser> SignInManager
@inject UserManager<ProjetoCasaDeShowUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
    @{
        var user = await UserManager.GetUserAsync(this.User);
    }
        <a id="manage" class="nav-link text-dark" title="Manage">Ol√° @user.Nome!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Sair</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Cadastre-se</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
    </li>
}
</ul>
